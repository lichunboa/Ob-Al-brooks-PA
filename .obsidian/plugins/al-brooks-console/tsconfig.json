{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "outDir": "dist",
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2015",
            "ES2017",
            "ES2020"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**"
    ]
}